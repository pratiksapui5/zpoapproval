<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Dialog noDataText="No Products Found" contentWidth="700px" horizontalScrolling="false">
		<VBox class="sapUiSmallMargin">
			<f:Form  editable="true" ariaLabelledBy="Title1">
				<f:layout>
					<f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4"
						emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="Approval Comments">
								<f:fields>
									<TextArea id="idCommentsPORelase" width="90%"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</VBox>
		<buttons>
			<Button text="Submit Approval" icon="sap-icon://accept" type="Emphasized" press="OnSubmitPORelease"></Button>
			<Button text="Cancel" type="Reject" icon="sap-icon://decline" press="OnCancelPORelease"></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>